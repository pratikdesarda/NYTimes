<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view_best_seller"
    android:layout_width="@dimen/one_eighty_dp"
    android:layout_height="@dimen/two_thirty_dp"
    card_view:cardCornerRadius="@dimen/five_dp"
    card_view:cardUseCompatPadding="true"
    card_view:cardBackgroundColor="@android:color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="10">

        <ImageView
            android:id="@+id/img_best_seller_thumbnail"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="7"
            android:scaleType="fitXY"
            android:contentDescription="@string/best_seller"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3"
            android:orientation="horizontal"
            android:padding="@dimen/five_dp">

            <TextView
                android:id="@+id/tv_best_seller_name"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:maxLines="2"
                android:ellipsize="end"
                android:gravity="center"
                android:padding="@dimen/five_dp"/>

        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>